<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView android:id="@+id/album_name"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Album name:"/>
        
    <EditText android:id="@+id/new_album_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_name"
        />
        
    <ListView android:id="@+id/all_music"
        android:layout_width="260px"
        android:layout_height="160px"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="6dip"
        android:layout_below="@id/new_album_name"/>
        
    <TextView android:id="@+id/local_folder_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_below="@id/new_album_name"
        android:layout_toRightOf="@id/all_music"
        android:singleLine="true"
        android:text="LAST"/>
        
    <ListView android:id="@+id/new_list"
        android:layout_width="260px"
        android:layout_height="160px"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="6dip"
        android:layout_below="@id/all_music"/>
        
    <TextView android:id="@+id/new_album_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_below="@id/all_music"
        android:layout_alignTop="@id/new_list"
        android:layout_toRightOf="@id/new_list"
        android:singleLine="true"
        android:text="SAVE"/>
        
</RelativeLayout>